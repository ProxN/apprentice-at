<ul class="list list--block">
  {{#forEach apprenticeships}}
  <li class="list__item">
    <article class="apprenticeship grid">
      <div class="grid__item grid__item grid__item--two-thirds">
        <header class="apprenticeship__header">
          <h1 class="apprenticeship__header"><a href="{{apprenticeship.company_url}}">{{apprenticeship.company}}</a></h1>
        </header>
        <section class="apprenticeship__content">
          <p>{{apprenticeship.summary}}</p>
          <a class="apprenticeship__button" href="{{apprenticeship.apply_url}}">{{apprenticeship.cta}}</a>
        </section>
      </div>
      <footer class="apprenticeship__footer grid__item grid__item--one-third">
        <ul class="apprenticeship__details list list--normal">
          <li class="list__item"><b>Duration:</b> {{apprenticeship.duration}}</li>
          <li class="list__item"><b>Location:</b> 
            <ul class="list list--inline">
              {{#each apprenticeship.location}}
                <li class="list__item">{{ . }}</li>
              {{/each}}
            </ul>
          </li>
          <li class="list__item"><b>Category:</b> {{apprenticeship.category}}</li>
        </ul>
      </footer>
    </article>
  </li>
  {{/forEach}}
</ul>
