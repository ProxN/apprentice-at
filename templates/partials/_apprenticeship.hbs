{{#forEach apprenticeships}}
<li class="l-block m-apprenticeship">
  <h3 class="m-apprenticeship__company">Company: <a href="{{apprenticeship.company_url}}">{{apprenticeship.company}}</a></h3>
    <p class="m-apprenticeship__summary">{{apprenticeship.summary}}</p>
    <ul class="m-apprenticeship__details">
      <li><b>Deadline:</b> {{apprenticeship.deadline}}</li>
      <li><b>Timeframe:</b> {{apprenticeship.timeframe}}</li>
      <li><b>Duration:</b> {{apprenticeship.duration}}</li>
      <li><b>Location:</b> {{apprenticeship.location}}</li>
      <li><b>Category:</b> {{apprenticeship.category}}</li>
    </ul>
    <p><a class="m-apprenticeship__cta" href="{{apprenticeship.apply_url}}">{{apprenticeship.cta}}</a></p>
</li>
{{/forEach}}